@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<section id="error" class="shadow bg-dark radius-2 padding-dy text-center ">
    <div class="row v-height-50 v-centred">
        <div class="col-md-12">
            <h1 class="font-weight-600 mb-0">
                Error
            </h1>
