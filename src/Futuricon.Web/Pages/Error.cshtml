                <div class="item">
                    <h6 class="h5 text-alt mt-1 mb-0 "> <span class=" text-rotating">*?@@#/!&^%$~`</span></h6>
                </div>
            </div>
            @if (Model.ShowRequestId)
            {
                <p class="err-code">
